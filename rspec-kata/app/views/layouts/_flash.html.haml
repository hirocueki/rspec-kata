- if flash.any?
  .row
    .col-xs-12
      - flash.each do |name, message|
        .alert.alert-dismissible{class: name == 'notice' ? 'alert-success' : 'alert-warning'}
          %button.close{type: 'button', aria:{label: 'Close'} }
            %span{aria:{hidden: 'true'}} &times;
          = message
