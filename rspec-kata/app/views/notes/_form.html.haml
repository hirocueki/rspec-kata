= form_with(model: [note.project, note], local: true) do |f|
  - if note.errors.any?
    #error_explanation
      %h2 = "#{pluralize(note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - note.errors.full_messages.each do |message|
          %li= message
  .formm-group
    = f.label :message
    = f.text_area :message, class: "form-control"

  .actions
    = f.submit 'Save', class: "btn btn-primary"
    = link_to "Cancel", note.project, class: "btn btn-danger", data: { confirm: "Are you sure?" }
